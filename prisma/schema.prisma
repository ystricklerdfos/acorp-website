// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User Management
model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String
  passwordHash  String
  emailVerified DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  projects         Project[]
  pledgeSigned     Boolean   @default(false)
  dfosJoined       Boolean   @default(false)
  profile          UserProfile?
  blogPosts        BlogPost[]
  connectedAccounts ConnectedAccount[]
}

model UserProfile {
  id              String   @id @default(cuid())
  userId          String   @unique
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  bio             String?
  location        String?
  website         String?
  showABusiness   Boolean  @default(false)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

// Stage 1: Project Registration
model Project {
  id                String          @id @default(cuid())
  name              String
  description       String
  entityType        EntityType
  genre             String[]
  location          String?
  catalogueData     Json?
  status            ProjectStatus   @default(DRAFT)
  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @updatedAt

  ownerId           String
  owner             User            @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  members           ProjectMember[]
  ownership         OwnershipBreakdown[]

  // Stage 2: Financial data
  financialModel    FinancialModel?

  // Stage 3: Generated documents
  documents         Document[]
}

enum EntityType {
  LLC
  S_CORP
  C_CORP
  PARTNERSHIP
  SOLE_PROPRIETORSHIP
  COOPERATIVE
  A_CORP
  OTHER
}

enum ProjectStatus {
  DRAFT
  REGISTERED
  ACTIVE
  ARCHIVED
}

model ProjectMember {
  id          String   @id @default(cuid())
  projectId   String
  project     Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  name        String
  email       String?
  role        String
  createdAt   DateTime @default(now())

  @@unique([projectId, email])
}

model OwnershipBreakdown {
  id          String   @id @default(cuid())
  projectId   String
  project     Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  memberName  String
  percentage  Float
  notes       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Stage 2: Financial Modeling
model FinancialModel {
  id                    String   @id @default(cuid())
  projectId             String   @unique
  project               Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)

  // Inputs
  annualIncome          Float
  equity                Float
  annualPayroll         Float
  ownershipStructure    Json
  sources               Json
  intellectualProperty  Json

  // Calculated Outputs
  valuation             Float?
  splits                Json?
  healthInsurance       Json?
  comparisons           Json?

  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
  calculatedAt          DateTime?
}

// Stage 3: Document Generation
model Document {
  id            String       @id @default(cuid())
  projectId     String
  project       Project      @relation(fields: [projectId], references: [id], onDelete: Cascade)
  type          DocumentType
  title         String
  fileUrl       String?
  metadata      Json?
  status        DocumentStatus @default(DRAFT)
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
  generatedAt   DateTime?
}

enum DocumentType {
  LLC_FORMATION
  ARTICLES_OF_ORGANIZATION
  OPERATING_AGREEMENT
  INVESTMENT_TERMS
  TERM_SHEET
  SUBSCRIPTION_AGREEMENT
  BYLAWS
  OTHER
}

enum DocumentStatus {
  DRAFT
  GENERATED
  SIGNED
  ARCHIVED
}

// Connected Accounts / Integrations
model ConnectedAccount {
  id            String            @id @default(cuid())
  userId        String
  user          User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  platform      Platform
  status        ConnectionStatus  @default(CONNECTED)
  accessToken   String?
  refreshToken  String?
  tokenExpiry   DateTime?
  lastSync      DateTime?
  autoSync      Boolean           @default(true)
  syncFrequency SyncFrequency     @default(SIX_HOURS)
  settings      Json?
  createdAt     DateTime          @default(now())
  updatedAt     DateTime          @updatedAt

  @@unique([userId, platform])
}

enum Platform {
  METALABEL
  DFOS
  SPOTIFY
  DISTROKID
  TUNECORE
  CD_BABY
  SOUNDEXCHANGE
  ASCAP
  BMI
  QUICKBOOKS
  STRIPE
  SHOPIFY
  BANDCAMP
  INSTAGRAM
  YOUTUBE
}

enum ConnectionStatus {
  CONNECTED
  DISCONNECTED
  ERROR
}

enum SyncFrequency {
  HOURLY
  SIX_HOURS
  DAILY
  WEEKLY
}

// Content Management
model BlogPost {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  content     String
  excerpt     String?
  publishedAt DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  authorId    String
  author      User     @relation(fields: [authorId], references: [id])
  featured    Boolean  @default(false)
}

model Story {
  id          String   @id @default(cuid())
  title       String
  content     String
  projectId   String?
  submittedBy String?
  approved    Boolean  @default(false)
  publishedAt DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Pledge {
  id          String   @id @default(cuid())
  email       String   @unique
  name        String
  location    String?
  message     String?
  createdAt   DateTime @default(now())
}

model DFOSMember {
  id          String   @id @default(cuid())
  email       String   @unique
  name        String
  interests   String? // Comma-separated for SQLite
  createdAt   DateTime @default(now())
}
